<!-- A modifier lors de l'utilisation de la gem search -->
<div class="bar pt-5"->
  <div class="search-bar">
    <form class="form-inline">
      <input class="form-control mr-sm-2" type="address" placeholder="Where do you eat?" label="Search">
      <input class="form-control mr-sm-2" type="date_time" placeholder="When?" label="Search">
      <input class="form-control mr-sm-2" type="guest" placeholder="How many guest?" label="Search">
      <button class="btn btn-warning my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</div>

<div class="container">
  <div class="py-5">
    <div class="cards">
      <% @offers.each do |offer| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
          <h3><%= offer.label %></h3>
          <p><%= offer.description %><p>
          <span class="cuisine"><%= offer.cuisine %></span>
          <span class="rate"><%= offer.rate_per_guest %></span>
        </div>
      <% end %>
    </div>
  </div>
  <div class="map">
  </div>
</div>




