<!-- A modifier lors de l'utilisation de la gem search -->
<div class="bar pt-5"->
  <div class="search-bar">
    <form class="form-inline">
      <input class="form-control mr-sm-2" type="address" placeholder="Where do you eat?" label="Search">
      <input class="form-control mr-sm-2" type="date_time" placeholder="When?" label="Search">
      <input class="form-control mr-sm-2" type="guest" placeholder="How many guests?" label="Search">
      <button class="btn btn-warning my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</div>

<div class="container-card-and-map">
  <div class="py-5">
    <div class="cards">
      <% @offers.each do |offer| %>
        <div class="card-category">
          <h3><%= link_to offer.label, offer_path(offer) %></h3>
          <p><%= offer.description %><p>
            <div class="card-informations">
              <span class="badge badge-pill badge-dark"><%= offer.cuisine %></span>
              <span class="rate"><%= offer.rate_per_guest %> â‚¬</span>
            </div>
        </div>
      <% end %>
    </div>
  </div>
  <div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>




